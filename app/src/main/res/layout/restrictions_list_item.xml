<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/item_border" >

    <TextView
        android:id="@+id/restrictionView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/removeRestrictionButton"
        app:layout_constraintTop_toTopOf="parent"
        app:fontFamily="@font/montserrat" />
    <Button
        android:id="@+id/removeRestrictionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="â€”"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/restrictionView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/pink_red"
        app:fontFamily="@font/montserrat" />

</androidx.constraintlayout.widget.ConstraintLayout>